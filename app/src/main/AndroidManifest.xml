<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swasthgarbh.swasthgarbh">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mother"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity
            android:name=".PatientPanel"
            android:label="@string/title_activity_patient_panel" />
        <activity
            android:name=".DoctorPanel"
            android:label="@string/title_activity_doctor_panel" />
        <activity
            android:name=".PatientHistory"
            android:label="@string/title_activity_patient_history"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>